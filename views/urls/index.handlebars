

<h2>Create a Shortened URL</h2>
<form action="/urls" method="post">
  <div class="form-group">
    <label for="url">URL</label>
    <input type="text" name="url" id="url" class="form-control">
  </div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>


<header class="page-header">
  <h2>URLs</h2>
</header>


{{#if (isEmpty urls) }}
  <p class="text-danger">No URLs</p>
{{else }}
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Original URL</th>
        <th>Created At</th>
        <th>Short URL</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      {{#each urls as |url| }}
        <tr>
          <td>{{ url.id }}</td>
          <td><a href="{{ url.url }}">{{ url.url }}</a></td>
          <td>{{ url.createdAt }}</td>
          <td><a href="/{{ url.shortUrl }}">{{ url.shortUrl }}</a></td>
          <td data-url-id="{{ url.id }}">
            <a href="/urls/{{ url.id }}">
              {{ url.clicks.length }}
            </a>
          </td>
        </tr>
      {{/each }}
    </tbody>
  </table>
{{/if }}



